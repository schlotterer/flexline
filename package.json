{
  "name": "flexline",
  "version": "1.1.0",
  "description": "WordPress FSE Theme",
  "main": "index.js",
  "scripts": {
    "dev": "npm run development",
    "development": "cross-env NODE_ENV=development webpack --progress --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "npm run development -- --watch",
    "build": "mix --production",
    "prod": "npm run production",
    "production": "npm run fix-php && npm run lint-style:fix && npm run lint-js:fix && npm run build",
    "lint": "npm run lint-js && npm run lint-style && npm run lint-php",
    "lint-staged": "lint-staged",
    "lint-php": "vendor/bin/phpcs --standard=WordPress inc",
    "fix-php": "vendor/bin/phpcbf --standard=WordPress inc",
    "lint-js": "wp-scripts lint-js src/js",
    "lint-js:fix": "wp-scripts lint-js src/js --fix",
    "lint-style": "wp-scripts lint-style src/scss",
    "lint-style:fix": "wp-scripts lint-style src/scss --fix",
    "ci-lint-js": "wp-scripts lint-js src/js --max-warnings=0 .",
    "ci-lint-style": "wp-scripts lint-style src/scss --max-warnings=0"
  },
  "keywords": [],
  "author": "Joel Schlotterer",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-react": "^7.27.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@wordpress/eslint-plugin": "^22.19.0",
    "@wordpress/scripts": "^30.23.0",
    "@wordpress/stylelint-config": "^23.22.0",
    "autoprefixer": "^10.4.21",
    "@wordpress/scripts": "^30.26.0",
    "@wordpress/stylelint-config": "^23.27.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "cross-env": "^10.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "laravel-mix": "^6.0.49",
    "lint-staged": "^16.2.4",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.93.0",
    "sass-loader": "^16.0.5"
  },
  "lint-staged": {
    "*.php": "vendor/bin/phpcbf --standard=WordPress",
    "*.js": "wp-scripts lint-js",
    "*.scss": "wp-scripts lint-style"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "Safari >= 10"
  ]
}
